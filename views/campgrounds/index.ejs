<!-- @format -->

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>campGrounds</title>
  </head>
  <body>
    <h1>캠프 목록</h1>
    <h1><a href="/campgrounds/new">캠프 생성</a></h1>
    <ul>
      <% for(const campground of campgrounds){ %>
      <li>
        <a href="/campgrounds/show/<%= campground['id'] %>"
          ><%= campground['title'] %></a
        >
      </li>
      <button>
        <a href="/campgrounds/update/<%= campground['id'] %>">수정</a>
      </button>
      <form
        action="campgrounds/<%= campground['id'] %>?_method=DELETE"
        method="POST"
      >
        <button type="submit">삭제</button>
      </form>
      <% } %>
    </ul>
  </body>
</html>
